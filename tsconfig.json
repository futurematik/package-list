{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": ["node"]
  },
  "exclude": ["node_modules/", "lib/"]
}
